<div class="content">
  <div class="container">
    <div class="row">
      <div class="audit-title">
        <h2>New Audit Plan</h2>
        <div class="audit-content container">
          <%= form_for(@audit) do |f| %>
            <%= render 'form', :f => f, :audit => @audit, :departments => @departments, :teams => @teams, :auditor_users => @auditor_users, team_users: @team_users %>
            <div class="col-sm-8" id="auditee-button" style="display:none;">
              <div class="form-group clearfix addissue">
                <a href="javascript:void(0)" class="plus-icon" id="add_auditee">Add Auditee
                </a>
              </div>
            </div>
            <div class="col-lg-12 col-sm-6 col-xs-12 text-align-right">
              <br>
              <br>
              <a class="black_btn" href="javascript:goBack()">Back</a>
              <%= f.submit "Initiate Audit", :class => "grey_btn" if @audit.audit_status_name == "Planning" %>
              <%= f.submit "Update Audit", :class => "orange_btn" if @audit.audit_status_name != "Published" %>
              <br>
              <br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
