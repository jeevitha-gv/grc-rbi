<link href="/assets/bootstrap-multiselect.css" rel="stylesheet" />
<div class="content">
  <div class="container">
   <div class="clearfix"> <a class="import-btn" data-toggle="modal" href="#add_csv"><i class="download-icons"></i>Import audit from CSV</a>
   </div>   <!-- <div class="upload-btn clearfix"><a class="grey_btn" href="#add_csv" data-toggle="modal">Import audit from CSV</a></div> -->
    <div class="row">
		<% flash[:notice] if flash[:notice].present? %>
      <div class="audit-title">
        <h2>New Audit Plan</h2>
        <div class="audit-content container">
          <%= form_for(@audit) do |f| %>
            <%= render 'form', :f => f, :audit => @audit, :departments => @departments, :teams => @teams, :auditor_users => @auditor_users, team_users: @team_users %>
            <div class="col-lg-12 col-sm-6 col-xs-12 text-align-right">
              <br>
              <br>
              <a class="grey_btn" href="javascript:goBack()">Back</a>
              <%= f.submit "Save as Plan", :class => "orange_btn" %>
              <%= f.submit "Initiate Audit", :class => "black_btn" %>
              <br>
              <br>
            </div>
          <% end %>
          <div class="form-group clearfix addissue">
            <div class="modal fade" id="add_csv">
              <div class="modal-dialog modal-dialog_large">
                <div class="modal-content">
                  <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button"> &nbsp; </button>
                    <h4 id="myModalLabel" class="modal-title">Upload files only CSV</h4>
                    <div class="modal-content-inner">
                      <%= form_tag audit_imports_audits_path, multipart: true do %>
                        <%= file_field_tag :file %>
                        <br>
                        <div class="model-footer">
                        <%= submit_tag "Import" ,:class => "black_btn" %>
                      <%= button_tag "Cancel", type: 'button', "data-dismiss" => "modal", :class => "orange_btn" %></div>
                      <% end %>
                    </div>
                      <p></p>
                      <p>
                        <%= link_to "Download Sample Audit CSV", audit_export_audits_path(format: "csv") %>
                      </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>