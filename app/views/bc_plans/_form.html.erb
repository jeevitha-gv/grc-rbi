          </tr>
          
          <%# if risk.attachment.present? %>
          <tr>
            <td><label>Business Process :</label>
              <span> <%= @bc_analysis.bu_process.name%></span></td>
            <td><label>Threat : </label>
              <span> <%= @bc_analysis.threat.name%></span></td>
            <td><label>Vulnerability : </label>
              <span> <%= @bc_analysis.vulnerability.name%></span></td>
          </tr>
          
          
          <%# end %>
