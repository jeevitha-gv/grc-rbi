<div class="page-wrap">
  <div class="content">
    <div class="container">
      <div class="row">
        <div id="example" class="k-content">
          <div class="risk-title">Manage Subscriptions and Payments</div>

          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="risk-wrap">
              <div class="sub-wrap">
                <div class="sub-wrap-bg">

                <%= form_tag charges_path do %>
                  <article>
                    <label class="amount">
                      <h1>What you get?</h1>
                      <ul>
                        <li>Unlimited Users</li>
                        <li>Unlimited Storage space and document management</li>
                        <li>Full unlocked access for all modules</li>
                        <li>24*5 Support</li>
                      </ul>
                      <span>Default Plan $500</span>
                    </label>
                  </article>

                  <div class="row">
                    <div class="col-md-4">
                      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="A month's subscription"
                          data-amount="50000"></script>
                    </div>
                  </div>

                  <br>

                  <div class="clearfix">

                  <div class="row">
                    <img src="/assets/outer/stripe.png">
                  </div>
                <% end %>

                  <div class="row">
                    <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>