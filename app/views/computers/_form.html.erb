<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :name, t('computer.name') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :name, :class => "form-control risk-normal-input" %>
      </div>
      <% if computer.errors[:name].present? %>
        <div class="error_message"><%= computer.errors[:name][0]%></div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
