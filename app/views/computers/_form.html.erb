      </label>
      <div class="col-sm-8">
        <%= f.text_field :serial, :class => "form-control risk-normal-input",:maxlength => 25 %>
      </div>
      <% if computer.errors[:serial].present? %>
        <div class="error_message"><%= computer.errors[:serial][0]%></div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
