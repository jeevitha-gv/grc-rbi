<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
       <%= f.label :name, t('contract.name') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :name %>
      </div>
      <% if contract.errors[:name].present? %>
        <div class="error_message"><%= contract.errors[:name][0]%></div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :manufacturer, t('contract.manufacturer') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :manufacturer, :class=>"audit-normal-input" %>
      </div>
      <% if contract.errors[:manufacturer].present? %>
        <div class="error_message"><%= contract.errors[:manufacturer][0]%></div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
       <%= f.label :notes, t('contract.model') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :notes,:class=>"audit-normal-input" %>
      </div>
    </div>
  </div>
</div>

<div class="clearfix border-divider"> </div>

