<!doctype html>
<html>
<head>

  <div class="clearfix"></div>
  <div class="content">
    <div class="container">
      <div class="row"> 
        <!-- Nav tabs --> 
         <div class="risk-title">Control Review</div>
         </div>
         </div>
         <!------------Risk box ---------->
         <div class="container">
         <div class="row">
         	<div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
            <div class="mitigation-box-wrap">
              <div class="mitigation-status">
                  <div class="risk-box-lable">Control ID:</div>
                    <div class="risk-box-text"><%= control.controlid if control.present? %></div>
                </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
             <div class="mitigation-box-wrap">
            	<div class="mitigation-sub">
                	<div class="risk-box-lable">Name:</div>
                    <div class="risk-box-text"><%= control.name if control.present? %></div>
                </div>
                </div>
            </div>
             <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
            <div class="mitigation-box-wrap">
            	<div class="mitigation-status">
                	<div class="risk-box-lable">Status:</div>
                    <div class="risk-box-text"><%#= risk.subject if risk.present? %></div>
                </div>
                </div>
            </div>
         </div>
         
         <div class="row">
         	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            	 <div class="tab-pane active" id="all">
            <div class="table-responsive">
              <table class="table table-striped table-bg">
                <!-- <tr>
                  <th colspan="6" class="risk-able-th">Security process for conveyance operators</th>
                </tr> -->
                <tr>
                  <td><label>Control ID : </label>
                    <%= control.controlid if control.present? %></td>
                  <td><label>Owner Delegate: </label>
                    <span> Manager</span></td>
                  <td><label>Classification : </label>
                     <span>IT Security</span><%#= control.classification_control_name if control.present? %></td>
                </tr>
                <tr>
                  <td><label>Created at : </label>
                    <span> 12/11/2014</span></td>
                  <td><label>Owner : </label>
                    <span>Manager</span></td>
                  <td><label>effective date :</label>
                    <span> 28/11/2014</span></td>
                </tr>
                <tr>
                  <td><label>Type: </label>
                    <span>Access Management</span></td>
                  <td><label>Owning Group : </label>
                      <span>Manager</span><%#= control.owning_group_name if control.present? %></td>
                  <td><label> stop date :</label>
                    <span> 03/12/2014</span></td>
                </tr>
                <tr>
                  <td><label>Purpose : </label>
                      <span>Internal</span><%#= control.purpose_control_name if control.present? %></td>
                  <td><label>Control Regulation : </label>
                     <span>ISO 27001</span><%#= control.control_regulation_name if control.present? %></td>
                  <td></td>
                </tr>
               
              </table>
            </div>
          </div>
            </div>
         </div>
         <%= f.fields_for :control_review do |control_review| %>
         <!---------------Table 2 -------->
         <div class="row">
         	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="risk-assetes">
            	<div class="mitigation-recomm">
                <div class="mit-reccom-title">Objective</div>
                <p><%= control.objective if control.present? %></p>
              </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            	<div class="mitigation-recomm">
                <div class="mit-reccom-title">Maintenance Metric Description</div>
                <p><%= control.maintenance_metric_description if control.present? %></p>
              </div>
            </div>
         </div>
         <div class="row">
          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="risk-assetes">
              <div class="mitigation-recomm">
                <div class="mit-reccom-title">Desciption</div>
                <p><%= control.description if control.present? %></p>
              </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
              <div class="mitigation-recomm">
                <div class="mit-reccom-title">Notes</div>
                <p><%= control.note if control.present? %></p>
              </div>
            </div>
         </div>
          <!---------------form 1 -------->
         <div class="row">
         	 <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="mit-plan-effort">
            	<div class="mitigation-percive">
                <div class="mit-reccom-title-sp">Plan Effort</div>
                <div class="risk-wrap clearfix">
                <div class="sub-wrap-bg">
             
                	<div  class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
           		<!--Row first ------------>
                <div class="row">
            		 <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 ">
               		   <div class="form-group">
                    		<label for="inputEmail3" class="col-sm-4 control-label">Fraud Related</label>
                   		 <div class="col-sm-8">
                      
                    <div class="risk-select">
                    <%= control_review.collection_select(:fraud_related_id, FraudRelated.all, :id, :name)%>
                    </div>
                    </div>
                   </div>
                  </div>
                  </div>

                
              
                 </div>
                    <div  class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                      <div class="row">
                           <div class="text-area clearfix">
                              <label for="exampleInputPassword1">
                                      <%=control_review.label :execution_steps, t('control_review.execution_steps')%>
                                     </label>
                                     <%= control_review.text_area :execution_steps,:class=>"form-control control-big-input"%>
                                     
                            </div>
                                  
                              </div>
                        
                             
                             <div class="row">
                           <div class="text-area clearfix">
                              <label for="exampleInputPassword1">
                                      <%= control_review.label :expected_result, t('control_review.expected_result')%>
                                     </label>
                                     <%= control_review.text_area :expected_result,:class=>"form-control control-big-input"%>
                                     <%# if control_review.errors[:expected_result].present? %>
                                    <div class="error_message"><%#= control_review.errors[:expected_result][0]%></div>
                                     <%# end %>
                            </div>
                                  </div>
                                  </div>
                             </div>
                      </div>
                  </div>
                   
           
                </div>
            </div>
            </div>
            <div class="fright paddingtop" style="padding-right: 80px;"><%= f.submit "Save ", :class => "orange_btn" %> <a class="grey_btn" href=""> Cancel</a></div>
         </div>
           </div>
          
             
                <!---------------form 1 -------->
         <div class="row">
           <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="mit-plan-effort">
              <!-- <div class="mitigation-percive">
                <div class="mit-reccom-title-sp">Perceived Score</div> -->
                <div class="risk-wrap clearfix">
                <div class="sub-wrap-bg">
                
                  <div  class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
             
                 </div>
                 
                 
              


                </div>
            </div>
            <!-- </div> -->

         </div>

           </div>

                <div class="btn-group">
                  
                </div>
      </div>

    </div>

  </div>
  <div class="clearfix"></div>
  <div class="footer">
  <div class="container">
    <div class="row">

      <div class="footer_left col-lg-6">2014 Â© FixNix Audit Management</div>
      <div class="footer_right col-lg-6">Powered By<img src="img/footer_logo.png" alt=""/></div>
    </div>
  </div>
</div>
</div>
<% end %>
</body>
</html>
