<style>
#error_explanation h2{display: none;}
</style>

      <!-- Flash Notice Starts here -->
      <%if flash[:forgot_notice]%>
        <div class="alert alert-success"><button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash[:forgot_notice] %></div>
      <% end%>
      <% if flash.alert.present? %>
        <div class="container">
          <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                <div id="error_explanation">
                  <ul>
                    <%- flash.each do |name, msg| -%>
                    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                    <%- end -%>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Flash notice Ends Here -->

<title>FixNix|Login form</title>
<link rel="stylesheet" href="/assets/outer/signin.css">
<div >
 <p class="trail-head"><b>Experience your GRC in cloud</b></p>
</div>
<section class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form"}) do |f| %>
    <center><img src="/assets/outer/logo.png" height="250px" width="250px" ></center>
      <%= f.text_field :login  , :placeholder => "Enter your Username or Email", class: "validate[required]"  %>
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Enter your password", class: "validate[required]"  %>
        <%= f.hidden_field :domain, value: (request.subdomain.present? ? request.subdomain : false)%>
      &nbsp;&nbsp;
      <%= f.submit "Sign in", :class => "signin submit" %>
      <span class="create-account"><%= link_to "Sign up", "/companies/new" %></span>
      <br><br>
      <span><%= link_to "Resend Confirmation Instruction", "/users/confirmation/new" %></span>
      <br>
      <span><%= link_to "Forget password?", "/users/password/new" %></span>
</section>
 <% end %>
 <script type="text/javascript">
$(document).ready(function(){
    $("#login-form").validationEngine();
});
</script>