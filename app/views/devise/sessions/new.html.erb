<%if flash[:forgot_notice]%>
  <div class="alert alert-success"><button type='button' class='close' data-dismiss='alert'>&times;</button><%= flash[:forgot_notice] %></div>
<%end%>
<% if flash.alert.present? %>
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div id="error_explanation">
            <ul>
              <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
              <%- end -%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="container" style="margin-top:30px">
		<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
  				<div class="panel-heading">
  					<h3 class="panel-title"><strong>Sign in </strong></h3>
            <%= link_to "New Company", "/companies/new", :class => "panel-title pull-right", style: "margin-top: -20px; font-size: 12px;" %>
  				</div>
  				<div class="panel-body">
   					<form role="form">
  						<div class="form-group">
                  <%= f.label :login, "Username or e-mail" %><br />
                  <%= f.text_field :login , :class =>"form-control" %>
  						</div>
  						<div class="form-group">
    						<%= f.label :password %><br />
    						<%= f.password_field :password, autocomplete: "off", :class =>"form-control"  %>
  						</div>
  						<div>
  	 						<% if devise_mapping.rememberable? -%>
    							<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  							<% end -%>
                <%= f.hidden_field :domain, value: (request.subdomain.present? ? request.subdomain : false)%>
  						</div>
  						<div>
  							<%= f.submit "Sign in", :class => "btn btn-m btn-success" %>
  						</div>
  						<div>
  							<%= render "devise/shared/links" %>
  						</div>
					</form>
  				</div>
			</div>
		</div>
	</div>
<% end %>






