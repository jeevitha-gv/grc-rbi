<%= javascript_include_tag "/assets/views/document_new.js" %>
<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :description, t('document.description') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_area :description, :class => "form-control risk-normal-input",:maxlength => 25 %>
      </div>
      
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :version, t('document.version') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :version, :class => "form-control risk-normal-input",:maxlength => 25 %>
      </div>
      <% if document.errors[:version].present? %>
        <div class="error_message"><%= document.errors[:version][0]%></div>
      <% end %>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :assigned_on, t('document.assigned_on') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :assigned_on, :class => "datepicker" %>
      </div>
    </div>
  </div>
</div>


