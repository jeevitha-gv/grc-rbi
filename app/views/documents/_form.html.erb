<%= f.fields_for :asset do |ff| %>

<%= render partial: "asset_partials/asset_properties", :locals => {:ff => ff } %>
<%= render partial: "asset_partials/security_properties", :locals => { :ff => ff } %>

<% end %>

<div class="clearfix">
  <h4><b>Document Properties</b></h4>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :document_type_id %>
        <div class="risk-select width-fix">
          <%= f.collection_select(:document_type_id, DocumentType.all, :id, :name) %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :document_status_id %>
        <div class="risk-select width-fix">
          <%= f.collection_select(:document_status_id, DocumentStatus.all, :id, :name) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :version %>        
        <%= f.text_field :version, :class => "form-control risk-normal-input" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :assigned_on %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :assigned_on, :class => "datepicker" %>
      </div>
    </div>
  </div>
</div>

<script>

$('.ui.checkbox')
  .checkbox();

$(document).ready(function(){
  $('.datepicker').kendoDatePicker()
});

</script>





