<%= javascript_include_tag "/assets/views/document_new.js" %>

<!-- First Row -->

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :name, t('document.name') %>
        <%= f.text_field :name, :class=>"form-control" %>
      </div>
    </div>
  </div>
</div>

<!-- Second Row -->

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :document_type_id, t('document.doc_type') %>
        <div class="risk-select width-fix">
          <%= f.collection_select(:document_type_id, DocumentType.all, :id, :name) %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :impact_id, t('document.impact') %>
        <div class="risk-select width-fix">
          <%= f.collection_select(:impact_id, Priority.all, :id, :name) %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Third Row -->

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :description %>
        <%= f.cktext_area :description, :class=>"form-control asset-big-input" %>
      </div>
    </div>
  </div>
</div>

<div class="clearfix border-divider"></div>

