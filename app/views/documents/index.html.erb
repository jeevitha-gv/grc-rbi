<style>
  .k-grid-content {
    height: auto !important;
    max-height: 270px !important;
    min-height: 450px !important;
  }
  .k-grid {
      border-color: #e9e9e9;
      height: 568px !important;
  }
</style>

<%= javascript_include_tag "/assets/views/document.js" %>

<%= render partial: "asset_partials/left_nav" %>

<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-6">
      <div class="risk-title">Document Assets</div>
    </div>
    <div class="col-lg-3 button-fix">
      <a href="/inventory/source_codes/new" class="btn btn-primary">New</a>
      <a class="btn btn-default" data-toggle="modal" href="#add_url">Import</a>
    </div>
    <div class="col-lg-3">
      <div class="asset-search-box src-space clearfix">
        <div class="fright scr-padding">
          <div class="form-group audit_search">
            <%= text_field_tag :query, params[:query], :class=>"form-control", :id => "search-value" %>
            <%= submit_tag "Search", name: nil, :class=>"btn btn-default src-brn", :id => "search-button" %>
            <a href="javascript:void(0);" class="cancel-btn1">Clear Search Results</a>
          </div>
        </div>
      </div>
    </div>    
  </div>
  <div id="grid" class="k-grid-content"></div>
</div>

<div id="add_url" class="modal fade">
  <div class="modal-dialog modal-dialog_large">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &nbsp;</button>
        <h4 class="modal-title" id="myModalLabel">Import Document Assets from CSV/XLSX</h4>
          <div class="modal-content-inner">
            <%= form_tag document_imports_documents_path, multipart: true do %>
              <%= file_field_tag :file %>
              <br>
              <div class="model-footer">
                <%= submit_tag "Import" ,:class => "black_btn" %>
                <%= submit_tag "Cancel" ,:class => "orange_btn" %>
              </div>
            <% end %>
          </div>
          <div  class="grey_btn pop-up-gray">
            <%= link_to "Download Sample CSV Template", document_export_documents_path(format: "csv"), class: "download-file-icon plus-icon-sp" %>
          </div>
      </div>
    </div>
  </div>
</div>