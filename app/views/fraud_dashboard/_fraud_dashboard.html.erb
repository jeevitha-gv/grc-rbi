<script type="text/javascript">
$(function () {
    $('#container2').highcharts({
        chart: {
            type: 'pie',
            options3d: {
                enabled: true,
                alpha: 45,
                beta: 0
            }
        },
        title: {
            text: 'Fraud Status'
        },
        credits: {
            enabled: false
        },
        tooltip: {
            valueSuffix: ' frauds'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                depth: 35,
                dataLabels: {
                    enabled: true,
                    format: '{point.name}'
                }
            }
        },
       series: [{
            name: 'Count',
            colorByPoint: true,
            data: [<%@fraud.each do |c1|%>
                       {
                           name: '<%=c1.state%>',
                           y: <%=c1.count%>,
                           drilldown: '<%=c1.state%>'
                       },
                       <%end%>]
        }],
        
    });
});
</script> 


