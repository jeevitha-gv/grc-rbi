<html>
<head>

<!-- 
 <%#= javascript_include_tag "/assets/jquery.countdown.js" %>
  <#%= javascript_include_tag "/assets/jquery.countdown.min.js" %> -->
  <%#= javascript_include_tag "/assets/outer/countdown.js" %>
  

   
</head>
<div class="clearfix"></div>
<div class="content">
  <div class="container">
    <div class="row"> 
    
      <!-- Nav tabs -->
      <div id="example" class="k-content" >
   
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="risk-wrap" >
          <div class="sub-wrap">
              <div class="sub-titile">Use this form in order to document a new Incident for consideration in the Incident Management Process.</div>
              <br>
              <div id = "counter">
              

           <div class="container">
           <form class="form-horizontal" role="form">
              <!--Row first ------------>
                <div class="row">
                    <div class="container">
             <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label class="col-sm-3 control-label">
                      <%= f.label :title, t('incident.title')%>
                    </label>
                    <div class="col-sm-8">
                        <%= f.text_field :title, :class => "form-control risk-normal-input" %>
             <% if incident.errors[:title].present? %>
              <div class="error_message"><%=  incident.errors[:title][0]%></div>
                    <% end %>
                   </div>
                  </div>
              </div>
             
              <span id="clock"></span>

             <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label class="col-sm-3 control-label">
                    <%= f.label :request_type_id, t('incident.type')%>
                    </label>
                    <div class="col-sm-8">
                      
                    <div class="risk-select">
                    <%= f.collection_select(:request_type_id, RequestType.all, :id, :name)%>
                    </div>
                    </div>
                    
                  </div>
       </div>
             <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label for="inputPassword3" class="col-sm-3 control-label"> 
                    <%= f.label :category, t('incident.incident_category_id')%>
                    </label>
                    <div class="col-sm-7" style=" width: 66.33333333%;">
                       <div class="risk-select">
                  <%= f.collection_select(:incident_category_id, IncidentCategory.all, :id, :name)%>
                    </div>
                    </div>
                    </div>
                  </div>
       </div>

                
            </div>
            </div>
            <br>

            <!-- second Row---->
                <div class="row">
                    <div class="container">
             <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group clearfix">
                    <label for="inputEmail3" class="col-sm-6 control-label" style=" width: 30.33333333%;">
                      <%= f.label :Date_Occured, t('incident.date_occured')%>
                    </label>
                    <div class="col-sm-8">
                  <%= f.text_field :date_occured, :class => "form-control risk-normal-input",:id => "incident",:maxlength => 25 %> </div>
                    </div>
                   
                  </div>
             
             <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label  class="col-sm-4 control-label" style=" width: 28.33333333%;" >
                    <%= f.label :department_id, t('incident.department_id')%>
                    </label>
                    <div class="col-sm-8">
                     <div class="risk-select">
                      <%= f.collection_select(:department_id, current_company.departments, :id, :name)%>
                    </div>
                    </div>
                    </div>
                  </div>
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-3 control-label" style=" width: 28.33333333%;" >
                      <%= f.label :contact_no, t('incident.contact_no')%>
                    </label>
                    <div class="col-sm-8" style=" width: 66.33333333%">
                    <%= f.text_field :contact_no, :class=>"form-control risk-normal-input", :maxlength=>10 %>
                    </div>
                  </div>
              </div>
             
       </div>
        </div>

          <div class="row">
                        <div class="container">
                           <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                               <div class="form-group">
                                 <label for="inputPassword3" class="col-sm-5 control-label" style=" width: 30.63333333%;">
                                 <%= f.label :Jobtitle, t('incident.Jobtitle')%>
                                 </label> 
                                      <div class="col-sm-6" style=" width: 66.33333333%;">
                     <div class="risk-select">
                    <%= f.text_field :Jobtitle, :class=>"form-control risk-normal-input", :maxlength=>100%>

                    </div>
                    <% if incident.errors[:Jobtitle].present? %>
                <div class="error_message"><%=incident.errors[:Jobtitle][0]%></div>
               <% end %>
                    
                    </div>
                        </div>
                                  </div>
                                  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label  class="col-sm-4 control-label" style=" width: 28.33333333%;" >
                    <%= f.label :sub_category_id, t('incident.sub_category_id')%>
                    </label>
                    <div class="col-sm-8">
                     <div class="risk-select">
                    <%= f.collection_select(:sub_category_id, current_company.departments, :id, :name)%>
                    </div>
                    </div>
                    </div>
                  </div>
                       <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                  <div class="form-group">
                    <label  class="col-sm-4 control-label" style=" width: 28.33333333%;" >
                    <%= f.label :team_id, t('incident.team_id')%>
                    </label>
                    <div class="col-sm-8">
                     <div class="risk-select">
                    <%= f.collection_select(:team_id, current_company.teams, :id, :name)%>
                    </div>
                    </div>
                    </div>
                  </div>
                            

                    </div>
                                 </div>
                
               
             <!------End------>
             
                    <!-- fourth Row---->
               
            
             <!----Risk Assesment -------------->
             <div class="row">
                        <div class="container">
                          <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                               <div class="form-group">
                                     <div class="col-sm-11">
                                     <label for="exampleInputPassword1">
                                      <%= f.label :summary, t('incident.summary')%>
                                     </label>
                                     <%= f.text_area :summary,:class=>"form-control incident-big-input"%>
                                     <% if incident.errors[:summary].present? %>
                        <div class="error_message"><%= incident.errors[:summary][0]%></div>
                      <% end %>
                            </div>
                                  </div>
                                  </div>
                                 </div>
<br>
                <div class="row">
                <div class="fright paddingtop" style="padding-right: 50px;">
                <%= f.fields_for :attachment, (@incident.attachment.present? ? @incident.attachment : @incident.build_attachment) do |attach| %>  
                <%= attach.file_field :attachment_file, :class=>"risk_attachment", onchange: "display_selected_files(this)" %>
                <%= attach.hidden_field :company_id, :value => "#{current_company.id}"%>
          <br />
                <div id="attach_<%= @incident.attachment.id%>"><%= link_to (File.basename(@incident.attachment.attachment_file_url)).truncate(20), download_incident_document_incidents_path(id: @incident.attachment.id), class: "blue_link risl-blue-link" if @incident.attachment.attachment_file_url%>
                <div class="addissue risk-rem"> <%= link_to "Remove", remove_attachment_incidents_path(id: @incident.attachment.id ), data: { confirm: "Are you sure?" }, method: :delete, remote: true, class: "minus-icon" if @incident.attachment.attachment_file.present? %>
                </div>
                <% end %>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="btn-wrap">
            </div>
            </div>
            </div>
          <br>
            </div>

                        
            <div class="fright paddingtop" style="padding-right: 80px;"><%= f.submit "Save ", :class => "orange_btn" %> <%= f.submit "Save as Draft", :class => "grey_btn"%><a class="grey_btn" href=""> Cancel</a></div>
            </div>
            <br>     
             </form>
            </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<br><br><br><br><br><br><br>

<div class="clearfix"></div>
<div class="footer">
  <div class="container">
    <div class="row">
      <div class="footer_left col-lg-6">2014 Â© FixNix Audit Management</div>
      <div class="footer_right col-lg-6">Powered By<img src="img/footer_logo.png" alt=""/></div>
    </div>
  </div>
</div>

</html>