<div class="content">
  <div class="container">
    <div class="row">
      <div class="risk-title">Edit Incident
      </div>
      <%= form_for(@incident) do |f| %>
      <%= render 'form', :f => f, :incident => @incident, :departments => @departments, :teams => @teams %>
      <div class="col-sm-8" id="auditee-button" style="display:none;">
        <div class="form-group clearfix addissue">
            <a href="javascript:void(0)" class="plus-icon" id="add_auditee">Add Auditee
            </a>
        </div>
      </div>
      <div class="col-lg-12 col-sm-6 col-xs-12 text-align-right">
          <br>
          <br>
          <%= f.submit "Update Incident", :class => "orange_btn" if @incident.incident_status_name != "closed" %>
          <%= f.submit "Initiate Incident", :class => "grey_btn" if @incident.incident_status_name == "Draft" %>
          <a class="black_btn" href="javascript:goBack()">Back
          </a>
          <br>
          <br>
      </div>
      <% end %>
    </div>
  </div>
</div>
 
