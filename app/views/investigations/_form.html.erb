<div class="clearfix border-divider"></div>


<div class="risk-wrap">
<div class="sub-wrap">
<div class="sub-titile">Fraud Investigation</div>
<div class="sub-wrap-bg">
<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
    <div class="mitigation-box-wrap">
      <div class="row">
      
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 ">
          <div class="mitigate-inner mitigate-box">
              <div class="risk-box-lable">Reference ID :</div>
              <div class="risk-box-lable"><%= @fraud.reference %></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    <div class="mitigation-box-wrap">
      <div class="mitigation-sub">
          <div class="risk-box-lable">Subject :</div>
          <div class="risk-box-text"><%= @fraud.subject %></div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
    <div class="mitigation-box-wrap">
      <div class="mitigation-status">
          <div class="risk-box-lable">Status:</div>
          <div class="risk-box-text"><%= @fraud.fraud_status.name %></div>
      </div>
    </div>
  </div>
</div>
</div>
  </div>
</div>

<div class="clearfix border-divider"></div>


<div class="risk-wrap">
<div class="sub-wrap">
<div class="sub-titile">Assign to Investigator/Manager</div>
<div class="sub-wrap-bg">


<div class="row">
  
 <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <div class="col-sm-12">
      <%= f.label :assign_for, t('fraud.assign_for') %>
    <div class="risk-select width-fix">
      <%= f.collection_select(:assign_for, current_company.users, :id, :user_name) %>
    </div>
    </div>
  </div> 
</div>
</div>


</div>
</div>
</div>

<div class="clearfix border-divider"></div>

<div class="risk-wrap">
<div class="sub-wrap">
<div class="sub-titile">Add a new Investigation</div>
<div class="sub-wrap-bg">
<!-- <div class="ui info message">Evaluate and Assess the current level of protection of this asset. Recommend some controls to be put in place for each of the categories below if necessary.</div> -->

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :summary %>
        <%= f.cktext_area :summary, :class=>"form-control asset-big-input redactor" %>
      </div>
    </div>
  </div>
</div>
  
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :closing_id, t('fraud.closing') %>
        <div class="risk-select width-fix">
          <%= f.collection_select(:closing_id, Closing.all, :id, :name) %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :finding_id, t('fraud.finding') %>
        <div class="risk-select width-fix">
          <%= f.collection_select(:finding_id, Finding.all, :id, :name) %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :actual_loss, t('fraud.actual_loss') %>
        <%= f.text_field :actual_loss, :class => "form-control risk-normal-input" %>
      </div>
    </div>
  </div>
</div>


</div>
</div>
</div>




  