<script type="text/javascript">
  $(document).ready(function(){
    var module_check = $('#module_check').val()
    $( ".user_login" ).mouseenter(function() {
      $(this).addClass("active");
      $(".account_header_dropdown").slideDown(100);
    })
    .mouseleave(function() {
      $(this).removeClass("active");
      $(".account_header_dropdown").hide();
    });

    $("#next-phase").click(function(){
      new Messi('Planned for further phases.');
    });

    if (module_check == 'overview' || module_check == '')
    {
      $("#links").append("<%= escape_javascript( render(:partial=>'/layouts/overview'))%>");
    }
    else if(module_check == 'risk')
    {
      $("#links").append("<%= escape_javascript( render(:partial=>'/layouts/risk'))%>");
    }
    else if(module_check == 'audit')
    {
      $("#links").append("<%= escape_javascript( render(:partial=>'/layouts/audit'))%>");
    }
  });
</script>