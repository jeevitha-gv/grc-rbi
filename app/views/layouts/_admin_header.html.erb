<div class="header">
  <div class="container">
    <!-- Fixed navbar -->
    <div role="navigation" class="navbar navbar-inverse ">
      <div class="container">
        <div class="navbar-header">
          <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
          <div class="navbar-brand">Audit-Risk</div>
          </div>
        <div class="navbar-collapse collapse fleft">
          <ul class="nav navbar-nav main_nav">
            <li><a href="/admin/dashboard" class="<%= add_super_admin_active_class(params) == 'Settings' ? 'active' : '' %>">
              <div class="overview-icon"></div>
              Overview</a></li>
            <li class="next-phase"><a href="/admin/compliances" class="<%= add_super_admin_active_class(params) == 'Audit' ? 'active' : '' %>" >
              <div class="audit-icon"></div>
              Audit</a></li>

            <li class="next-phase"><a href="/admin/planning_strategies" class="<%= add_super_admin_active_class(params) == 'Risk' ? 'active' : '' %>" >
              <div class="risk-icon"></div>
              Risk</a> </li>
          </ul>
        </div>
        <input type="hidden" id="module_check" value="<%= super_admin_sub_menu(request.fullpath.split('/')[2])%>">
        <div class="user_login">

            <img src="/assets/outer/user-icon.jpg">
          <div class="user-name">Super Admin</div>
          <span id="login_drop"><img src="/assets/outer/user-down-arrow.png"></span>

          <div class="account_header_dropdown" style="display: none;">
            <ul>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
        <!--/.nav-collapse -->
      </div>
    </div>
  </div>
</div>

<div class="clearfix"></div>

<div class="sub_menu super-admin" >
  <!-- Fixed navbar -->
  <div role="navigation" class="navbar navbar-inverse subnavbar-fixed-top">
		<div class="container" id="links">

      </div>
  </div>
</div>
