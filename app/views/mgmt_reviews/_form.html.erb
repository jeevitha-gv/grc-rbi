                        <div class="col-sm-8 mgt-text"><%= @risk.mitigation.current_solution if @risk.mitigation.present? %></div>
                  </div>
                  <div >
                        <label for="inputEmail3" class="col-sm-4 control-label mgt-label">Requirements :</label>
