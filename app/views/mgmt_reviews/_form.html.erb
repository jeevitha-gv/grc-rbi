                  <div >
                        <label for="inputEmail3" class="col-sm-4 control-label mgt-label">Recommendations:</label>
                        <div class="col-sm-8 mgt-text"><%= @risk.mitigation.security_recommendations if @risk.mitigation.present? %></div>
