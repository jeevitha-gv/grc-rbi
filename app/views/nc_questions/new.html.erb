<div class="clearfix"></div>
<div class="content">
  <div class="container">
    <div class="row">
      <div class="audit-title">
        <h2>Prepare Checklist for Non-Compliance Audit</h2>
        <div class="audit-content container">          
          <%= form_for(@nc_question) do |f| %>
          <div class="col-lg-4 col-sm-6 col-xs-12">
            <div class="form-group clearfix">
              <%= f.label :question, t('nc_question.request'), :class => "col-sm-4" %>
              <%= f.text_field :question, :class => "audit-normal-input" %>
            </div>
            <div class="form-group clearfix">
              <%= f.label :question_type_id, t('nc_question.resp_type'), :class => "col-sm-4 control-label" %>
              <%= f.collection_select(:question_type_id, QuestionType.all, :id, :name, {}, {:class => "col-sm-7"}) %>
            </div>
          </div>
          <div class="col-lg-4 col-sm-6 col-xs-12">
            <div class="form-group clearfix">
              <%= f.label :auditee_id, t('nc_question.assign_auditee'), :class => "col-sm-4 control-label" %>
              <%= f.collection_select(:auditee_id, User.all, :id, :full_name, {}, {:class => "col-sm-7"})  %>
            </div>
            <div class="form-group clearfix">
              <%= f.label :target_date, t('nc_question.target_date'), :class => "col-sm-4 control-label" %>
              <%= f.date_field :target_date, :class => "col-sm-7" %>              
            </div>
          </div>
          <div class="col-lg-4 col-sm-6 col-xs-12">            
            <div class="form-group clearfix">
              <%= f.label :priority_id, t('nc_question.priority'), :class => "col-sm-4 control-label" %>
              <%= f.collection_select(:priority_id, Priority.all, :id, :name, {}, {:class => "col-sm-7"})  %>              
            </div>
            <div class="form-group clearfix">
              <%= f.label :does_require_document, t('nc_question.need_doc'), :class => "col-sm-5" %>
              <%= f.check_box :does_require_document %>
            </div>
            <div class="form-group clearfix">
              <%= f.label :nc_library, t('nc_question.save_to_lib'), :class => "col-sm-12" %>
              <%= f.check_box :nc_library %>              
            </div>
          </div>
          <div class="clearfix border-divider"> </div>      
          <div class="col-lg-4 col-sm-6 col-xs-12">             
          </div>
          <div class="col-lg-4 col-sm-6 col-xs-12">              
          </div>
          <div class="col-lg-4 col-sm-6 col-xs-12"><br><br>
              <a class="black_btn" href="">Cancel</a> 
              <a class="black_btn" href="">Reset</a> 
              <%= f.submit "Ask Auditee", :class => "orange_btn" %>             
          </div>
          <% end %>
        </div>
        




















          
