<style type="text/css">
  .modal-header {
    border-bottom: medium none !important;
    display: inline-block;
    min-height: 44px !important;
    padding: 0 0 15px;
    width: 100%;
}
</style>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Share Policy</h4>
  </div>
  <%= form_tag send_emails_to_share_policies_path , remote: true do %>
  <%= hidden_field_tag :id, @policy.id%>
    <div class="modal-body">
        <%= label_tag "Email" %>
        <%= text_field_tag :share_policy_email %>
        <span id="email_error" class="error_message" style="display:none;">Enter the Email Address</span>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= submit_tag "Share", class: "btn btn-primary", :onclick => "email_validation();" %>
    </div>
<% end %>