<% if !@versions.present? %>
	<div class="container">
		<div class="col-lg-12">
			<div class="col-lg-2">
				
			</div>
			<div  class="col-lg-8">
				<h1>Newly Drafted Version</h1>
			</div>
		</div>
	</div>
	
<% else %>
	<div class="container">
		<div class="col-lg-12">
			<div class="col-lg-2">
				
			</div>
			<div  class="col-lg-8">
				<h1>Previous Version History</h1>
				<div class="panel panel-success">
					<div class="panel-heading">
						<%= @policy.title %> 
							<div class="navbar-right">
								Current Status -- 
								<%= @versions.length.to_i %>
							</div>
						
					</div>
					<div class="panel-body">
						<table class='table table-hover'>
						  <thead>
						    <tr>
						      <th>Version #</th>
						      <th>Date</th>
						      <th>Status</th>
						    </tr>
						  </thead>
						  <tbody>
						    <%- @policy.versions.reverse.each do |version| %>
						      <tr>
						        <td><%= version.index %></td>
						        <td><%= version.created_at.strftime("%m/%d/%Y") %></td>
						        <td>Retired</td>
						      </tr>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
</div>