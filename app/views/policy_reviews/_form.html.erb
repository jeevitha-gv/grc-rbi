 <div class="clearfix"></div>
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="panel-heading">
          <h4><b>Policy Review</b></h4>
        </div>
        <div class="col-md-12">
          <div class="panel with-nav-tabs panel-default">
            <div class="panel-heading">
              <h4><b><%= policy.title%></b></h4>
            </div>
            <div class="panel-body">
              <div class="table-responsive">
                <%= render 'policy_details', policy: policy %>
                <hr>
                <table class="table table-striped list-table">
                  <tr>
                    <th>Review Policy</th>
                  </tr>
                  <tr>
                    <td>
                      <%= form_for([policy, @policy_review], html: { class: "form-horizontal"}) do |f| %>
                        <div class="row">
                          <div class="new-policy">
                            <div class="col-lg-6" style="height: 350;">
                                <div class="col-md-12" >
                                  <div class="form-group clearfix">
                                    <label class="col-sm-3">Comment</label>
                                    <div class="col-sm-7">
                                      <%= f.text_area  :comment , row: "3", class: "form-control risk-big-input"%>
                                    </div>
                                  </div>
                                </div>
                                <div class="col-md-12" >
                                  <div class="form-group clearfix">
                                    <label class="col-sm-3">Comment</label>
                                    <div class="col-sm-7">
                                      <div class="risk-select">
                                        <%= f.collection_select :review_action_id, PolicyStatus.all, :id, :name %>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                            </div>
<!--                             <div class="col-lg-6 col-lg-6">
                              <div class="form-group clearfix">
                                <label class="col-sm-2 control-label">History</label>
                                <div class="col-sm-8">
                                    <%# if !policy.policy_reviews.nil? %>
                                      <p> Last Updated at : </p>
                                    <%# else %>
                                        'Policy Review is not present'
                                    <%# end %>
                                </div>
                              </div>
                            </div> -->
                          </div>
                            <div class="clearfix"><br>
                              <div class="fright paddingtop p-new-btn">
                                  <!-- <a class="green_btn"  href="">Create</a>  -->
                                  <a class="black_btn" href="javascript:goBack()">Back</a>
                                  <%= f.submit "Submit", :class => "orange_btn" %>
                              </div>
                              <% end %>
                            </div>
                        </div>
                      </td>
                    </tr>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>