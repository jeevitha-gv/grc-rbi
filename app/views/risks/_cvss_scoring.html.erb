              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
              <%= cvss.label :cvss_avail_impact, t('cvss.avail_imp') %>
