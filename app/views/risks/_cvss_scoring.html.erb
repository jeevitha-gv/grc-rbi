              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        </div>
      </div>
      <!-- Environmental Score Metrics -->

      <!-- Impact Subscore Modifiers -->
      <div class="">
      <div class="exploitability">Impact Subscore Modifiers</div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
