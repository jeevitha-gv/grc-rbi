<%= f.fields_for :cvss_scorings do |cvss| %>

<div class="row">
  <div class="likelihood matrix-padding clearfix">
    <div class="base-score-matrix">CVSS Score Metrics
      <div class="up-triangle"></div>
    </div>

    <!-- Exploitability Metrics -->
    <div class="">
      <div class="exploitability"><u>Base Score Metrics</u></div>
      <div class="exploitability">Exploitability Metrics</div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
                <%= cvss.label :cvss_access_vector, t('cvss.att_vec') %>
              <div class="risk-select">
                <%= cvss.collection_select(:cvss_access_vector, CvssMetricScoring.for_name("AccessVector"), :abrv_metric_value, :metric_value, { include_blank: '--Select Score--' }, {:class =>"form-control"})  %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
              <%= cvss.label :cvss_access_complexity, t('cvss.att_compl') %>
              <div class="risk-select">
                <%= cvss.collection_select(:cvss_access_complexity, CvssMetricScoring.for_name("AccessComplexity"), :abrv_metric_value, :metric_value, { include_blank: '--Select Score--' }, {:class =>"form-control"})  %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
              <%= cvss.label :cvss_authentication, t('cvss.auth') %>
              <div class="risk-select">
                <%= cvss.collection_select(:cvss_authentication, CvssMetricScoring.for_name("Authentication"), :abrv_metric_value, :metric_value, { include_blank: '--Select Score--' }, {:class =>"form-control"})  %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Exploitability Metrics -->

      <!-- Impact Metrics -->
      <div class="">
      <div class="exploitability">Impact Metrics</div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
                <%= cvss.label :cvss_conf_impact, t('cvss.conf_imp') %>
              <div class="risk-select">
                <%= cvss.select :cvss_conf_impact, (0..10), { include_blank: '--Select Score--' }, { :class => "form-control" } %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="form-group">
            <div class="col-sm-12">
              <%= cvss.label :cvss_integ_impact, t('cvss.int_imp') %>
