<%= javascript_include_tag "/assets/views/service_new.js" %>
<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :name, t('service.name') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :name, :class => "form-control risk-normal-input" %>
      </div>
      
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :description, t('service.description') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_area :description, :class => "form-control risk-normal-input",:maxlength => 25 %>
      </div>
      
    </div>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :cost, t('service.cost') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :cost, :class => "form-control risk-normal-input",:maxlength => 25 %>
      </div>
      <% if service.errors[:cost].present? %>
        <div class="error_message"><%= service.errors[:cost][0]%></div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
