<%= javascript_include_tag "/assets/outer/jquery.tagsinput.min.js" %>

<%= f.fields_for :asset do |ff| %>
  <%= render partial: "asset_partials/asset_properties", :locals => {:ff => ff } %>
<% end %>

<div class="clearfix">
  <h4><b>Source Code Properties</b></h4>
</div>

<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :vcs_url, "Source Code VCS URL" %>
        <%= f.text_field :vcs_url, :class => "form-control risk-normal-input" %>
      </div>
    </div>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :version_number, "Version / Build / Release Number" %>
        <%= f.text_field :version_number, :class => "form-control risk-normal-input" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
    <div class="form-group clearfix">
      <label class="col-sm-4 control-label">
        <%= f.label :assigned_on, t('computer.assigned_on') %>
      </label>
      <div class="col-sm-8">
        <%= f.text_field :assigned_on, :class => "datepicker" %>
      </div>
    </div>
  </div>
</div>

<div class="clearfix">
  <h5><b>Current Level of Protection</b></h5>
</div>

<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <div class="form-group clearfix">
      <div class="col-sm-12">
        <%= f.label :backup_measure, "Backup Measures Taken" %>
        <%= f.text_area :backup_measure, :class => "form-control asset-big-input" %>
      </div>
    </div>
  </div>
</div>

<%= f.fields_for :asset do |ff| %>
  <%= render partial: "asset_partials/security_properties", :locals => { :ff => ff } %>
<% end %>

<script>

$('.ui.checkbox')
  .checkbox();

$('#tags').tagsInput({
  'defaultText':'add email'
});

 $(document).ready(function(){
    
    var temp_start = $(".datepicker").val()
    var start = $(".datepicker").kendoDatePicker({
      format: "dd/MM/yyyy"
  }).data("kendoDatePicker");
 

    $(".datepicker").bind("focus", function() {
      $(this).data("kendoDatePicker").open();
    });
    $('.datepicker').attr('readonly', true);

    $(".datepicker1").bind("focus", function() {
      $(this).data("kendoDatePicker").open();
    });
    $('.datepicker1').attr('readonly', true);

    $(".datepicker").val(temp_start)
  });

</script>
